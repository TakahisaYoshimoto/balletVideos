<li class="dropdown visible-xs">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">動画<span class="caret"></span></a>
  <ul class="dropdown-menu multi-level" role="menu">
    <% if user_signed_in? %>
      <li class="visible-xs">
        <%= link_to :controller => '/bits', action: :like_videos, or: 'time' do %>
          <i class="glyphicon glyphicon-thumbs-up"></i>グッドした動画
        <% end %>
      </li>
      <li class="visible-xs">
        <%= link_to '視聴履歴', {:controller => '/bits', action: :view_histories, or: 'history'} %>
      </li>
    <% end %>
    <li class="dropdown-submenu visible-xs">
      <a href="#" class="nav_submenu dropdown-toggle" data-toggle="dropdown" role="button">注目キーワード<span class="caret"></span></a>
      <ul class="nav_submenu_contents dropdown-menu" role="menu">
        <li><%= link_to '全ての注目動画', { :controller => '/bits', action: :attentionSearch, search_params: '注目キーワード', or: 'pv' } %></li>
        <% @tags.each do |tag| %>
          <% if tag.genre == '注目キーワード' %>
            <li><%= link_to "#{tag.tag_name}", { :controller => '/bits', action: :Search, search_params: tag.tag_name, category_params: '注目キーワード', or: 'pv' } %></li>
          <% end %>
        <% end %>
      </ul>
    </li>
    <li class="dropdown-submenu visible-xs">
      <a href="#" class="nav_submenu dropdown-toggle" data-toggle="dropdown" role="button">演目<span class="caret"></span></a>
      <ul class="nav_submenu_contents dropdown-menu" role="menu" style="overflow-y: scroll;">
        <li><%= link_to '全ての演目', { :controller => '/bits', action: :genreSearch, search_params: '演目', or: 'pv' } %></li>
        <% @tags.each do |tag| %>
          <% if tag.genre == '演目' %>
            <li><%= link_to "#{tag.tag_name}", { :controller => '/bits', action: :Search, search_params: tag.tag_name, category_params: tag.genre, or: 'pv' } %></li>
          <% end %>
        <% end %>
      </ul>
    </li>
    <li class="dropdown-submenu visible-xs">
      <a href="#" class="nav_submenu dropdown-toggle" data-toggle="dropdown" role="button">レッスン<span class="caret"></span></a>
      <ul class="nav_submenu_contents dropdown-menu" role="menu">
        <li><%= link_to '全てのレッスン', { :controller => '/bits', action: :genreSearch, search_params: 'レッスン', or: 'pv' } %></li>
        <% @tags.each do |tag| %>
          <% if tag.genre == 'レッスン' %>
            <li><%= link_to "#{tag.tag_name}", { :controller => '/bits', action: :Search, search_params: tag.tag_name, category_params: tag.genre, or: 'pv' } %></li>
          <% end %>
        <% end %>
      </ul>
    </li>
    <li class="dropdown-submenu visible-xs">
      <%= link_to 'その他', { :controller => '/bits', action: :genreSearch, search_params: "その他", or: 'pv' } %>
    </li>
  </ul>
</li>