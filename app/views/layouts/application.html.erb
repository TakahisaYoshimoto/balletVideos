<!DOCTYPE html>
<html>
  <head>
    <title>BalletVideos</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>  
    <div class="container">
      <header>
        <nav>
          <% if user_signed_in? %>
            <strong><%= current_user.username %></strong>
            <%= link_to(edit_user_registration_path) do %>
              <button class="btn btn-primary"><i class="glyphicon glyphicon glyphicon glyphicon-edit"></i> プロフィール変更</button>
            <% end %>
            <%= link_to(destroy_user_session_path, method: :delete) do %>
              <button class="btn btn-primary"><i class="glyphicon glyphicon glyphicon-log-out"></i> ログアウト</button>
            <% end %>
          <% else %>
            <%= link_to(new_user_registration_path) do %>
              <button class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> 新規会員登録</button>
            <% end %>
            <%= link_to(new_user_session_path) do %>
              <button class="btn btn-primary"><i class="glyphicon glyphicon glyphicon-log-in"></i> ログイン</button>
            <% end %>
          <% end %>
        </nav>
      </header>


      <%= yield %>

    </div>
  </body>
</html>