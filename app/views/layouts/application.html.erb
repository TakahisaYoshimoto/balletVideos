<!DOCTYPE html>
<html>
  <head>
    <title>BalletVideos</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= favicon_link_tag 'favicon.ico' %>
  </head>

  <body>

    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <button class="navbar-toggle" data-toggle="collapse" data-target=".target">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to image_tag('bit_logo.png', id: 'site_logo', height: 50), bits_path %>
        </div>
        <div class="collapse navbar-collapse target">
        <% if user_signed_in? %>
          <p class="navbar-text" style="margin-top:25px;">ようこそ <strong><%= current_user.username %></strong> さん</p>
        <% end %>
<%
=begin
%>
          <ul class="nav navbar-nav">
            <li style="height: 100%;"><%= link_to 'ビデオ', bits_path %></li>
            <li style="height: 100%;"><%= link_to 'コミュニティ', bits_path %></li>
          </ul>
<%
=end
%>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li>
                <button class="navbar-btn btn btn-primary">
                  <i class="glyphicon glyphicon glyphicon glyphicon-edit"></i>
                  <%= link_to ' プロフィール変更', edit_user_registration_path %>
                </button>
              </li>
              <li>
                <button class="navbar-btn btn btn-primary">
                  <i class="glyphicon glyphicon glyphicon-log-out"></i>
                  <%= link_to ' ログアウト', destroy_user_session_path, method: :delete %>
                </button>
              </li>
            <% else %>
              <li>
                <button class="navbar-btn btn btn-primary">
                  <i class="glyphicon glyphicon-plus"></i>
                  <%= link_to '新規会員登録', new_user_registration_path %>
                </button>
              </li>
              <li>
                <button class="navbar-btn btn btn-primary">
                  <i class="glyphicon glyphicon glyphicon-log-in"></i>
                  <%= link_to 'ログイン', new_user_session_path %>
                </button>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div id="contants" class="container">
      <%= yield %>
    </div>

    <div id="push">
    </div>

    <div id="footer">
      <div id="footer_text">
        <p>@bit-ballet.com, 2016-2017, Inc. or its affiliates</p>
      </div>
    </div>
  </body>
</html>