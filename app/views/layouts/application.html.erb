<!DOCTYPE html>
<html>
  <head>
    <title>BalletVideos</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>  
    <div id="header">
      <div class="container">
        <div class="row">
          <div class="col-sm-2">
            <h2 class="site_logo"><%= link_to 'Ballet!!', bits_path %></h2>
          </div>
          <div class="login_status col-sm-offset-4 col-md-offset-6 col-sm-6 col-md-4" >
            <header>
              <nav>
                <% if user_signed_in? %>
                  <strong><%#= current_user.username %></strong>
                  <%= link_to(edit_user_registration_path) do %>
                    <button class="btn btn-primary"><i class="glyphicon glyphicon glyphicon glyphicon-edit"></i> プロフィール変更</button>
                  <% end %>
                  <%= link_to(destroy_user_session_path, method: :delete) do %>
                    <button class="btn btn-primary"><i class="glyphicon glyphicon glyphicon-log-out"></i> ログアウト</button>
                  <% end %>
                <% else %>
                  <%= link_to(new_user_registration_path) do %>
                    <button class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> 新規会員登録</button>
                  <% end %>
                  <%= link_to(new_user_session_path) do %>
                    <button class="btn btn-primary"><i class="glyphicon glyphicon glyphicon-log-in"></i> ログイン</button>
                  <% end %>
                <% end %>
              </nav>
            </header>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>