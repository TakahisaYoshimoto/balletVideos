<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group">
    <%= f.label :email, 'メールアドレス', class: 'control-label col-sm-2' %><br />
    <%= f.email_field :email, class: 'form-control' , autofocus: true %>
  </div>

  <div class="field form-group">
    <%= f.label :username, 'ユーザーネーム', class: 'control-label col-sm-6' %><br />
    <%= f.text_field :username, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :password, 'パスワード', class: 'control-label col-sm-6' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上にしてください)</em>
    <% end %><br />
    <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, 'パスワードを確認の為もう一度入力して下さい', class: 'control-label col-sm-6' %><br />
    <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
  </div>

  <div class="actions form-group">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "users/shared/links" %>
