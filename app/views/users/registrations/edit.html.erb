<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group">
    <%= f.label :email, 'メールアドレス', class: 'control-label col-sm-2' %><br />
    <%= f.email_field :email, class: 'form-control' , autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group">
    <%= f.label :username, 'ユーザーネーム', class: 'control-label col-sm-6' %><br />
    <%= f.text_field :username, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :password, '新しいパスワード', class: 'control-label col-sm-6' %> <i>(パスワードを変更する場合入力して下さい。)</i><br />
    <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上にしてください。</em>
    <% end %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, '新しいパスワードを確認の為もう一度入力して下さい', class: 'control-label col-sm-6' %><br />
    <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
  </div>

  <div class="field form-group">
    <%= f.label :current_password, '現在のパスワード', class: 'control-label col-sm-6' %> <i>(プロフィール情報を変更するには、現在のパスワードが必要です。)</i><br />
    <%= f.password_field :current_password, class: 'form-control', autocomplete: "off" %>
  </div>

  <div class="actions form-group">
    <%= f.submit "Update", class: 'btn btn-primary' %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
