<div id="bits_index_sidebar" class="col-sm-3">
  <div id="search_area" class="col-xs-12">
    <div class="form-group row">
      <%= form_tag({controller: '/bits', action: :Search, id: @Search}, method: :get) do %>
        <div class="input-group form-group">
          <%= search_field_tag :search_params,
            session[:search_params],
            class: 'form-control',
            placeholder: 'キーワード' %>
          <span class="input-group-btn">
          <button type="submit" class="btn btn-default">
            <i class="glyphicon glyphicon-search"></i> 検索
          </button>
          </span>
        </div>
      <% end %>
    </div>
  </div>

  <% @genres.each do |genre| %>
    <div class="genre">
      <strong><%= genre.genre %></strong>
    </div>
    <% @tags.each do |tag| %>
      <% if tag.genre == genre.genre %>
        <div class="search_tag">
          <%= link_to "#{tag.tag_name}", { controller: :bits, action: :Search, search_params: tag.tag_name } %><br>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

<div id="y_index_links">
  <div class="col-sm-9">
    <div class="col-sm-12">
      <% @youtubes.each do |youtube| %>
        <%= link_to  youtube_video_path(youtube) do %>
          <div class="y_video_body row">
            <div class="y_video_img_area col-sm-4" style="padding: 0;">
              <% url = youtube.url.gsub(/http.+v=/, "") %>
              <%# url = url.gsub(/&list.+./, "") %>
              <% url = url.gsub(/&.+./, "") %>
              <%= image_tag('http://i.ytimg.com/vi/' + url + '/mqdefault.jpg',
                width: '100%',
                class: 'bits_index_link_img') %>
            </div>
            <div class="y_vide_rightarea col-sm-8">
              <div class="y_video_body_titlearea">
                <h4 class="title"><%= youtube.title %></h4>
              </div>
              <div class="y_video_body_tagarea">
                <p>
                  <strong>タグ:</strong>
                  <% youtube.youtube_video_tags.each do |tag| %>
                    #<%= tag.name %>
                  <% end %>
                </p>
              </div>
              <div class="y_video_textarea">
                <p><%= truncate(youtube.text, length: 100)%></p>
              </div>
            </div>
          </div>
        <% end -%>
      <% end %>
    </div><%# y_index_link %>

    <p class="pagenation_count"><%= page_entries_info @youtubes %></p>

    <div class="pagenation_bar">
      <%= paginate @youtubes %>
    </div>
  </div>
</div>