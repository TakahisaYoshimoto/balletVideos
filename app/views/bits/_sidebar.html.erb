<div id="bits_index_sidebar" class="col-sm-3">
  <div id="search_area" class="col-xs-12">
    <div class="form-group row">
      <%= form_tag({controller: '/bits', action: :Search, id: @Search}, method: :get) do %>
        <div class="input-group form-group">
          <%= search_field_tag :search_params,
            session[:search_params],
            class: 'form-control',
            placeholder: 'キーワード' %>
          <span class="input-group-btn">
          <button type="submit" class="btn btn-default">
            <i class="glyphicon glyphicon-search"></i>
          </button>
          </span>
        </div>
      <% end %>
    </div>
  </div>

  <% genres.each do |genre| %>
    <div class="genre">
      <strong><%= link_to genre.genre, { controller: :bits, action: :genreSearch, search_params: genre.genre } %></strong>
    </div>
    <% tags.each do |tag| %>
      <% if tag.genre == genre.genre %>
        <div class="search_tag">
          <%= link_to "#{tag.tag_name}", { controller: :bits, action: :Search, search_params: tag.tag_name } %><br>
        </div>
      <% end %>
    <% end %>
  <% end %>
  <div class="genre">
    <strong><%= link_to 'その他', { controller: :bits, action: :nogenreSearch, search_params: "その他" } %></strong>
  </div>
</div>