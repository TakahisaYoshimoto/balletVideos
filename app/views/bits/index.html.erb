<div id="bits_index_sidebar" class="col-sm-3">
  <% unless current_user.nil? %>
    <% if current_user.user_level > 1 %>
      <%= link_to 'youtube登録', new_youtube_video_path %><br>
    <% end %>
  <% end %>

  <div id="search_area" class="col-xs-12">
    <div class="form-group row">
      <%= form_tag({controller: '/bits', action: :Search, id: @Search}, method: :get) do %>
        <div class="input-group form-group">
          <%= search_field_tag :search_params,
            session[:search_params],
            class: 'form-control',
            placeholder: 'キーワード' %>
          <span class="input-group-btn">
          <button type="submit" class="btn btn-default">
            <i class="glyphicon glyphicon-search"></i>
          </button>
          </span>
        </div>
      <% end %>
    </div>
  </div>

  <% @tags.each do |tag| %>
    <div class="search_tag">
      <%= link_to "##{tag}", { controller: :bits, action: :Search, search_params: tag } %><br>
    </div>
  <% end %>
</div>

<div id="y_index_links">
  <div class="col-sm-9 row-eq-height">
    <% @youtubes.each do |youtube| %>
      <% if youtube.pickup_level == 4 || youtube.pickup_level == 6 %>
        <% if youtube.pickup_level == 6  %>
          <div class="col-sm-4" style="border: 1px dotted orange;">
            こうこく
          </div>
        <% end %>
        <div class="col-sm-8 row-eq-height">
          <%= link_to youtube_video_path(youtube), class: 'y_video_top_link_lg' do %>
            <div class="y_video_top_body_lg row">
              <div class="y_video_top_img_area col-sm-12" style="padding: 0;">
                <% url = youtube.url.gsub(/http.+v=/, "") %>
                <% url = url.gsub(/&.+./, "") %>
                <%= image_tag('http://i.ytimg.com/vi/' + url + '/mqdefault.jpg',
                  width: '100%',
                  class: 'bits_index_link_img') %>

                <div class="y_video_top_titlearea_lg">
                  <h4 class="title"><%= youtube.title %></h4>
                </div>
                <div class="y_video_top_catchphrase_lg">
                  <h5 class="catchphrase"><%= youtube.catchphrase %></h5>
                </div>
              </div>
            </div>
          <% end -%>
        </div>
      <% else %>
        <div class="col-sm-4 row-eq-height" style="height: 100%;">
          <%= link_to youtube_video_path(youtube) do %>
            <div class="y_video_top_body_sm row">
              <div class="y_video_img_area col-sm-12" style="padding: 0;">
                <% url = youtube.url.gsub(/http.+v=/, "") %>
                <% url = url.gsub(/&.+./, "") %>
                <%= image_tag('http://i.ytimg.com/vi/' + url + '/mqdefault.jpg',
                  width: '100%',
                  class: 'bits_index_link_img') %>
              </div>
              <div class="y_vide_rightarea">
                <div class="y_video_top_titlearea_sm">
                  <h4 class="title"><%= youtube.title %></h4>
                </div>
                <div class="y_video_top_catchphrase_sm">
                  <h5 class="catchphrase"><%= youtube.catchphrase %></h5>
                </div>
              </div>
            </div>
          <% end -%>
        </div>
      <% end %>
    <% end %>
  </div>
</div><%# y_index_link %>