<% if user_signed_in? %>
  <% unless youtube.like_user(current_user.id) %>
    <%= link_to action: :like, remote: true, id: params[:id] do %>
      <p id="good_button_hand">
        <span class="icon icon-main icon-good"></span>
      </p>
      <p id="good_button_count" style="display:inline-block;"><%= likes.count %></p>
    <% end %>
  <% else %>
    <%= link_to action: :like, remote: true, id: params[:id] do %>
      <p id="good_button_heart">
        <span class="icon icon-main icon-good"></span>
      </p>
      <p id="good_button_count" style="display:inline-block;"><%= likes.count %></p>
    <% end %>
  <% end %>
<% else %>
  <a href="#y_video_show_titlearea" data-toggle="popover" title="ログインするとグッドできます" data-content='<%= link_to 'ログイン', new_user_session_path %>'>
    <p id="good_button_hand">
      <span class="icon icon-main icon-good"></span>
    </p>
    <p id="good_button_count" style="display:inline;"><%= likes.count %></p>
  </a>
  <script>
    $(function() {
      $("[data-toggle=popover]").popover({
        placement: 'bottom',
        html: true
      });
    })
  </script>
<% end %>
