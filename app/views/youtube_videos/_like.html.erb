<% unless current_user.nil? %>
  <% unless youtube.like_user(current_user.id) %>
    <%= link_to action: :like, remote: true, id: params[:id] do %>
      <p id="good_button_hand"><i class="glyphicon glyphicon-thumbs-up"></i></p>
      <p id="good_button_count" style="display:inline;"><%= likes.count %></p>
    <% end %>
  <% else %>
    <%= link_to action: :like, remote: true, id: params[:id] do %>
      <p id="good_button_heart"><i class="glyphicon glyphicon-thumbs-up"></i></p>
      <p id="good_button_count" style="display:inline;"><%= likes.count %></p>
    <% end %>
  <% end %>
<% else %>
  <%= link_to action: :like, remote: true, id: params[:id] do %>
    <p id="good_button_hand"><i class="glyphicon glyphicon-thumbs-up"></i></p>
    <p id="good_button_count" style="display:inline;"><%= likes.count %></p>
  <% end %>
<% end %>