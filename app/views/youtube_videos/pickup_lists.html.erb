<% @youtubes.each do |youtube| %>
  <div class="col-xs-12 row-eq-height" style="padding:10px;">
    <div class="y_video_img_area col-sm-3" style="padding: 0;">
      <div class="y_video_img">
        <% url = youtube.url.gsub(/http.+v=/, "") %>
        <% url = url.gsub(/&.+./, "") %>
        <%= image_tag('https://i.ytimg.com/vi/' + url + '/mqdefault.jpg',
          width: '100%',
          class: 'bits_index_link_img') %>
        <div class="y_video_img_video_time">
          <%= youtube.video_time %>
        </div>
      </div>
    </div>
    <div class="col-sm-9">
      <p><%= youtube.pickup_level %> : <%= youtube.title %></p>
      <% unless current_user.nil? %>
        <% if current_user.user_level > 1 %>
          <%= link_to '編集する', edit_youtube_video_path(youtube) %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>