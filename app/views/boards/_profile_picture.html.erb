<% if i.user.picture_lg.present? %>
  <% if Rails.env == 'production' %>
      <%= link_to image_tag(ENV['AWS_PICTURE_PATH']+"#{ i.user.picture_min }"), profile_path(i.user) %>
  <% else %>
      <%= link_to image_tag("/docs/#{ i.user.picture_min }"), profile_path(i.user) %>
  <% end %>
<% else %>
  <%= link_to image_tag("no-picture-min.gif"), profile_path(i.user) %>
<% end %>