//共通
.board_top_img {
  position: relative;
  background-image: url(<%= asset_data_uri 'community_top_img.jpg' %>);
  background-repeat: no-repeat;
  background-position: top center;
  background-size: cover;
  width: 100%;
  height: 300px;
}
.board_top_img_text_a {
  position: absolute;
  color: white;
  font-size: 24px;
  font-weight: bold;
  top: 19%;
  width: 100%;
  text-align: center;
}
#board_top_img_secondarea {
  position: absolute;
  top: 60%;
  text-align: center;
}
.board_top_img_link_out {
  text-align: center;
  margin-bottom: 10px;
}
.board_top_img_link {
  display: inline-block;
  font-size: 14px;
  text-align: center;
  font-weight: bold;
  color: white;
  border: 4px solid white;
  border-radius: 5px;
  padding: 5px 20px 5px 20px;
}
.board_top_img_link:hover {
  text-decoration: none;
  color: pink;
  background: white;
}
#board_top_img_search_area {
  width: 95%;
  text-align: center;
}
@media screen and (max-width: 767px){
  #board_top_img_search_area {
    width:100%;
    margin-top:5px;
    text-align: center;
  }
  #board_top_img_search_area_child {
    max-width: 178px;
    margin: 0 auto;
  }
}

#board_top_img_search_area input {
  background: rgba(0,0,0,0);
  height:51px;
  border: 4px solid white;
  color:#FFF;
  font-weight:bold;
  font-size:18px;
}
  @media screen and (max-width: 767px){
    #board_top_img_search_area input {
      background: rgba(0,0,0,0);
      height:38px;
      border: 4px solid white;
      color:#FFF;
      font-size:14px;
      /*width:156px;*/
    }
  }

input.talk_search::-webkit-input-placeholder {
    color: #FFF;
}
input.talk_search:-ms-input-placeholder {
    color: #FFF;
}
input.talk_search::-ms-input-placeholder {
    color: #FFF;
}
input.talk_search::-moz-placeholder {
    color: #FFF;
}

input.talk_search {
  border-bottom-right-radius: 5px !important;
  border-top-right-radius: 5px !important;
}
  @media screen and (max-width: 767px){
input.talk_search {
  /*margin-left:28%;*/
}
}

button.talk_btn {
  background:transparent;
  color:#FFF;
  border:transparent;
  font-size: 24px;
  margin-top:6px;
  transition: .3s;
}
  @media screen and (max-width: 767px){
    button.talk_btn {
      background:transparent;
      color:#FFF;
      border:transparent;
      font-size: 20px;
      margin:0 auto;
    }
  }

button.talk_btn:hover {
  background:transparent;
  color:pink;
  border:transparent;
	-webkit-transform: scale(1.2);
  -moz-transform: scale(1.2);
  -o-transform: scale(1.2);
  -ms-transform: scale(1.2);
}

@media screen and (min-width: 768px){
  .board_top_img {
    height: 400px;
  }
  .board_top_img_text_a {
    top: 37%;
    font-size: 45px;
  }
  #board_top_img_secondarea {
    top: 80%;
  }
  .board_top_img_link_out {
    text-align: right;
  }
  .board_top_img_link {
    font-size: 24px;
    padding: 5px 40px 5px 40px;
    border: 4px solid white;
  }
  #board_top_img_search_area {
    width: 50%;
    max-width: 400px;
  }
}
@media screen and (min-width: 1200px){
  .board_top_img {
    height: 500px;
  }
  .board_top_img_text_a {
    font-size: 60px;
  }
  .board_top_img_link {
    font-size: 24px;
  }
  #board_top_img_search_area {
    width: 30%;
  }
}

