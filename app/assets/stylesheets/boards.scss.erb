//共通
.board_top_img {
  position: relative;
  background-image: url(<%= asset_data_uri 'community_top_img.jpg' %>);
  background-repeat: no-repeat;
  background-position: top center;
  background-size: cover;
  width: 100%;
  height: 300px;
}
.board_top_img_text_a {
  position: absolute;
  color: white;
  font-size: 24px;
  font-weight: bold;
  top: 19%;
  width: 100%;
  text-align: center;
}
#board_top_img_secondarea {
  position: absolute;
  top: 60%;
  text-align: center;
}
.board_top_img_link_out {
  text-align: center;
  margin-bottom: 10px;
}
.board_top_img_link {
  display: inline-block;
  font-size: 14px;
  text-align: center;
  font-weight: bold;
  color: white;
  border: 4px solid white;
  border-radius: 5px;
  padding: 5px 20px 5px 20px;
}
.board_top_img_link:hover {
  text-decoration: none;
  color: pink;
  background: white;
}
#board_top_img_search_area {
  width: 95%;
  text-align: center;
}
@media screen and (max-width: 767px){
  #board_top_img_search_area {
    width:100%;
    margin-top:5px;
    text-align: center;
  }
  #board_top_img_search_area_child {
    max-width: 178px;
    margin: 0 auto;
  }
}

#board_top_img_search_area input {
  background: rgba(0,0,0,0);
  height:51px;
  border: 4px solid white;
  color:#FFF;
  font-weight:bold;
  font-size:18px;
}
  @media screen and (max-width: 767px){
    #board_top_img_search_area input {
      background: rgba(0,0,0,0);
      height:38px;
      border: 4px solid white;
      color:#FFF;
      font-size:14px;
      /*width:156px;*/
    }
  }

input.talk_search::-webkit-input-placeholder {
    color: #FFF;
}
input.talk_search:-ms-input-placeholder {
    color: #FFF;
}
input.talk_search::-ms-input-placeholder {
    color: #FFF;
}
input.talk_search::-moz-placeholder {
    color: #FFF;
}

input.talk_search {
  border-bottom-right-radius: 5px !important;
  border-top-right-radius: 5px !important;
}
  @media screen and (max-width: 767px){
input.talk_search {
  /*margin-left:28%;*/
}
}

button.talk_btn {
  background:transparent;
  color:#FFF;
  border:transparent;
  font-size: 24px;
  margin-top:6px;
  transition: .3s;
}
@media screen and (max-width: 767px){
  button.talk_btn {
    background:transparent;
    color:#FFF;
    border:transparent;
    border: 4px solid white;
    font-size: 13px;
    margin:0 auto;
  }
}

button.talk_btn:hover {
  background:transparent;
  color:pink;
  border:transparent;
	-webkit-transform: scale(1.2);
  -moz-transform: scale(1.2);
  -o-transform: scale(1.2);
  -ms-transform: scale(1.2);
}

@media screen and (min-width: 768px){
  .board_top_img {
    height: 400px;
  }
  .board_top_img_text_a {
    top: 37%;
    font-size: 45px;
  }
  #board_top_img_secondarea {
    top: 80%;
  }
  .board_top_img_link_out {
    text-align: right;
  }
  .board_top_img_link {
    font-size: 24px;
    padding: 5px 40px 5px 40px;
    border: 4px solid white;
  }
  #board_top_img_search_area {
    width: 50%;
    max-width: 400px;
  }
}
@media screen and (min-width: 1200px){
  .board_top_img {
    height: 500px;
  }
  .board_top_img_text_a {
    font-size: 60px;
  }
  .board_top_img_link {
    font-size: 24px;
  }
  #board_top_img_search_area {
    width: 30%;
  }
}

#community_search_area {
}
#board_lists,
#board_comment_lists {
  border: 1px solid #F0F0F0;
  border-radius: 5px;
  padding: 0;
}
.board_link,
.board_comments,
.board_master_comments  {
  list-style: none;
  padding: 10px;
}
.board_link:not(:last-child),
.board_comments:not(:last-child) {
  border-bottom: 1px solid #F0F0F0;
}
.board_link img,
.board_comments img,
.board_master_comments img {
  width: 50px;
  height: 50px;
  border-radius: 5px;
}

/*index*/
.community_index_board_child {
  border: 1px solid gray;
  margin-bottom: 15px;
  padding: 18px 18px 23px 23px;
  height: 250px;
  position: relative;
}
@media screen and (max-width:767px) {
  .community_index_board_child {
    border: 1.0px solid gray;
    margin-bottom: 15px;
    padding: 18px 18px 23px 23px;
    height: 200px;
    position: relative;
  }
}




.community_index_board_child:not(:last-child) {
  margin-right: 15px;
}
.community_index_profile_picture img {
  border-radius: 5px;
  border-radius: 100%;
  margin-bottom: 8px;
}
.community_index_board_title,
.community_index_board_tags {
  text-align: left;
  margin-top: 1px;
}

.community_index_board_title {
    margin-bottom: 10px;
}

.community_index_board_comments_count {
  position: absolute;
  bottom: 3px;
  right: 10px;
}
.community_index_board_time,
.community_index_board_title p,
.community_index_board_comments_count p {
  margin: 0;
  color: black;
  font-size: 14px;
}

.community_index_board_time {
  font-size:11px;
  margin-bottom:2px;
}

.community_index_board_tags_area {
  margin-top:20px;
  text-align:center;
}
  @media screen and (max-width:991px) {
    .community_index_board_tags_area {
      margin-top:0px;
      text-align:center;
    }
  }

.community_index_board_tags p {
  margin: 3px auto;
  color: gray;
  font-size: 12px;
}
  @media screen and (max-width:991px) {
    .community_index_board_tags p {
      margin: 0px auto;
      color: gray;
      font-size: 12px;
    }
  }






/*lists*/
.board_link {
  overflow: hidden;
}
.board_link_picture_area {
  float: left;
  width: 50px;
}
.board_link_text_area {
  width: 100%;
  padding: 0 15px 0 65px;
}
.board_link_text {
  display: inline-block;
  font-size: 18px;
  color: black;
}
.board_link_comments_count {
  display: inline-block;
  width: 100%;
  text-align: right;
  margin: 0;
}

/*show*/
.board_master_comments {
  background: #F2F2F2;
}
.board_comments {
  background: white;
}
.board_comments p,
.board_master_comments p {
  padding-left: 53px;
}
.board_master_comments:not(:last-child) {
  border-bottom: 1px solid white;
}
#characnt {
  background-color: rgba(0,0,0,0);
  border: none;
  text-align: right;
}
#board_comment_submit {
  text-align: right;
