.y_video_top_poster_comment {
  background: #D3D3D3;
  border-radius: 3px;
  position: relative;
  margin-top: 10px;
}
.y_video_top_poster_comment:before {
  position: absolute;
  left: 50%;
  top: -30px;
  content: '';
  width: 0;
  height: 0;
  background: transparent;
  border: 20px solid;
  border-color: transparent transparent #D3D3D3 transparent;
}
.y_video_top_poster_comment_label {
  font-weight: bold;
  color: black;
  font-size: 16px;
  padding: 15px 0 10px 0;
