.row-eq-height {
  display: flex;
  flex-wrap: wrap;
}

.top_img {
  position: relative;
  background-image: url(<%= asset_data_uri 'xs_top_img.jpg' %>);
  /*background-image: url('top_img_img.jpg');*/
  background-repeat: no-repeat;
  background-position: top center;
  background-size: cover;
  width: 100%;
  height: 300px;
}
.top_img_text {
  position: absolute;
  color: white;
  font-size: 25px;
  top: 25%;
  width: 100%;
  text-align: center;
}
.top_img_link_out {
  width: 100%;
  position: absolute;
  top: 65%;
  text-align: center;
}
.top_img_link {
  display: inline-block;
  font-size: 16px;
  text-align: center;
  color: white;
  border: 3px solid white;
}
@media screen and (min-width: 768px){
  .top_img{
    height: 400px;
  }
  .top_img_text {
    font-size: 50px;
  }
  .top_img_link {
    font-size: 30px;
  }
}
@media screen and (min-width: 1200px){
  .top_img{
    height: 500px;
  }
  .top_img_text {
    font-size: 60px;
  }
  .top_img_link {
    font-size: 45px;
  }
}

