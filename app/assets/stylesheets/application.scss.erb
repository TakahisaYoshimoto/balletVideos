/*footer*/
#footer {
  margin-top: 30px;
  padding-top:30px;
  width: 100%;
  height: 300px;
  background: #000;
  position: relative;
}

#top_footer_left_area {
  height: 100px;
  float: left;
  padding-right: 20px;
}

#top_footer_second_area,
#top_footer_third_area,
#top_footer_right_area {
  height: 100px;
  float: left;
  padding: 0 20px;
}

#top_footer_center_area {
  height: 100px;
  float: left;
  padding: 20px 5px;
}

#top_footer_sns_area {
  height: 100px;
  float: left;
  padding-left: 20px;
}

#top_footer_contents {
  padding-top: 15px;
  overflow: hidden;
  min-width: 300px;
  display: inline-block;
  text-align: left;
}

@media screen and (max-width: 767px) {
  #footer {
    height: 650px;
  }
  #top_footer_left_area,
  #top_footer_second_area,
  #top_footer_third_area,
  #top_footer_center_area,
  #top_footer_right_area,
  #top_footer_sns_area
   {
    height: 100%;
    float: none;
    display: block;
    border: none;
    padding: 10px;
  }
}

#top_footer_search_link_area a,
#footer a, {
  padding: 0;
  margin: 0;
  color: #FFF;
}

#top_footer_left_area .top_footer_title {
  font-size:14px;
  padding: 0;
  margin: 0;
  color: #FFF;
}

#top_footer_search_link_area a, #top_footer_center_area a {
  font-size:12px;
  padding-left:8px;
}
  @media screen and (max-width: 767px) {
    #top_footer_search_link_area a, #top_footer_center_area a {
      font-size:12px;
      padding-left:15px;
    }
  }

@media screen and (max-width: 767px) {
  #top_footer_search_link_area {
    margin-top:7px;
  }
}

#footer_text {
  display: block;
  text-align: center;
  color:#FFF;
  margin-top:20px;
}

.sm_footer,
.xs_footer {
  font-size:11px;
  text-align: center;
  margin-top: 100px !important;
}

.xs_footer {
  font-size:11px;
  text-align: center;
  margin-top: 40px !important;
}


.icon-footer {
  color:#FFF;
}

#footer a:hover {
  text-decoration: none;
  color:gray;
}

