@import "bootstrap-sprockets";
@import "bootstrap";

$xsmall:  "only screen and (max-width:767px)";
$small: "only screen and (min-width:768px) and (max-width:991px)";
$middle: "only screen and (min-width:992px) and (max-width:1199px)";
$large:  "only screen and (min-width:1200px)";


/*共通*/
a {
  color:gray;
}

html, body {
  height: 100%;
  width: 100%;
  margin: 0;
}

h1 {
  font-size:30px;
}
  @media screen and (max-width:767px) {
    h1 {
      font-size:20px;
    }
  }

body {
  /*background: #F1F1F1;*/
  background: white;
  font-family: "Hiragino Maru Gothic W4 JIS2004", "游ゴシック", YuGothic, "ヒラギノ角ゴ ProN W3", "Hiragino Kaku Gothic ProN", "メイリオ", Meiryo, "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: 500;
  padding-top: 65px;
}
  @media screen and (min-width:768px) {
    body {
      padding-top: 90px;
    }
  }


  @media (min-width: 768px) {
    .container {
        width: 750px;
    }
  }

  @media (min-width: 992px) {
    .container {
        width: 930px;
    }
  }

  @media (min-width: 1200px) {
    .container {
        width: 1050px;
    }
  }

/*pagenation*/
.pagination > .active > a {
  background: black;
  border-color:black;
}

.pagination > li > a:hover {
  color: white;
  background: black;
  border-color:black;
}

.pagination > .active > a:hover {
  background: black;
  border-color:black;
}

.pagination > li > a {
  color:black;
}

/*ボタン*/
.btn-primary {
  color: #000;
  background-color: #FFF;
  border-color: #000;
}
.btn-primary:hover {
  color: white;
  background-color: black;
  border-color: black;
}

.btn-primary[type=submit]:focus {
  background-color: black;
  outline: 0;
  box-shadow: none;
  -moz-box-shadow: none;
  -webkit-box-shadow: none;
}

.btn-primary[type=submit]:active {
  outline: 0;
  border: 2px solid black;
  background-color: black;
  color: white;
  box-shadow: none;
  -moz-box-shadow: none;
  -webkit-box-shadow: none;
}

.btn-danger {
  color: #000;
  background-color: #FFF;
  border-color: #000;
}

.btn-danger:hover {
  color: gray;
  background-color: #FFF;
  border-color: gray;
}


.login-btn {
  color:black;
  border-color: #000;
}

.login-btn:hover {
  color: white;
  background-color: #000;
  border-color: #000;
}

.btn-default[type=submit]:focus {
    outline: 0;
    box-shadow: none;
    -moz-box-shadow: none;
    -webkit-box-shadow: none;
}

.btn-default[type=submit]:active {
    outline: 0;
    border: 2px solid black;
    background-color: black;
    color: white;
    box-shadow: none;
    -moz-box-shadow: none;
    -webkit-box-shadow: none;
}

/*form*/
.form-control:focus {
  /*border-color:#FF6D8F;*/
  border: 2px solid gray;
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
}

/*input:-webkit-autofill {
  -webkit-box-shadow: 0 0 0px 1000px rgb(255,153,204)
   inset!important;
}*/

input:-webkit-autofill {
  -webkit-box-shadow: 0 0 0px 1000px rgb(255,223,233)
   inset!important;
}

/*navbar*/
.navbar-inverse {
  background:#000;
}

.navbar {
  min-height: 50px;
  border-radius: 0;
}

.navbar-nav li a {
  color:#FFF !important;
  text-align:center;
  display:inline-block;
  padding-left:10px;
  padding-right:25px;
  padding-top:25px;
  padding-bottom:15px;
}
  @media screen and (max-width:767px) {
    .navbar-nav li a {
      padding-left:10px;
      padding-right:25px;
      padding-top:10px;
      padding-bottom:10px;
    }
  }

.navbar-nav li:nth-last-child(3) a {
  padding-top:17px;
  padding-bottom:5px;
  padding-left:20px;
  padding-right:20px;
}

.navbar-nav li:nth-last-child(4) a {
  padding-top:17px;
  padding-bottom:5px;
  padding-left:20px;
  padding-right:20px;
}

.navbar-right li p {
  display:inline-block;
  padding-bottom:0px;
  margin-bottom:0px;
}

.navbar-right li a {
  color:#FFF !important;
  text-align:center;
  display:inline-block;
  padding-left:18px 10px 10px 0;
  margin-right:10px;
  margin-left:5px;
  margin-top:0px;
  margin-bottom:0px;
}
  @media screen and (max-width: 767px) {
    .navbar-right li {
      padding-left:0px;
    }
    .navbar-right li a {
      padding-left:5px;
    }
  }

.navbar-nav li a:hover {
  color:#9d9d9d !Important;
}

.navbar-nav li .dropdown-menu {
  background:#000;
}

.nav-menu-icon {
  font-size:20px;
  padding-right:5px;
}

#nav_video_collapse_area {
  background: #000;
  color: white;
  padding: 15px;
}

#nav_video_collapse_area .panel-body,
#nav_community_collapse_area .panel-body {
  position: relative;
}

#nav_video_collapse_close_button,
#nav_community_collapse_close_button {
  position: absolute;
  bottom: 10px;
  right: 10px;
}

#nav_community_collapse_area {
  background: #000;
  color: white;
  padding: 15px;
}

#nav_video_collapse_area a,
#nav_community_collapse_area a {
  color: white;
}

.nav_community_collapse_area_tag_area_popular {
  border-bottom: 1px solid white;
  width: 80%;
}

.nav a {
  cursor: pointer;
}

.nav_video_collapse_frame_2 {
  display: block;
}

.nav_video_collapse_frame_3,
.nav_community_collapse_frame_1 {
  display: table;
}

.nav_video_collapse_frame_3_1,
.nav_video_collapse_frame_3_2, {
  display: table-cell;
  width: 200px;
}

.nav_community_collapse_frame_1_1,
.nav_community_collapse_frame_1_2 {
  display: table-cell;
  width: 200px;
}

.nav_video_collapse_area_tag_area,
.nav_community_collapse_area_tag_area {
  border-bottom: 1px solid white;
  width: 160px;
}

.nav_video_collapse_area_tag_area_repertoire
 {
  border-bottom: 1px solid white;
  width: 90%;
}

.nav_video_collapse_area_tag,
.nav_community_collapse_area_tag {
  display: inline;
  padding: 2px;
}

.nav_video_collapse_area_child_area,
.nav_community_collapse_area_child_area {
  padding: 7px 0 15px 0;
}

.nav_video_collapse_area_child,
.nav_community_collapse_area_child  {
  display: inline-block;
  width: 235px;
}
  @media screen and(max-width: 991px) {
    .nav_video_collapse_area_child,
    .nav_community_collapse_area_child  {
      display: inline-block;
      width: 210px;
    }
  }

.nav_submenu_contents {
  padding-left: 10px;
}

#nav_video_collapse_close_button {
  text-decoration: none;
}

#nav_video_collapse_close_button span{
  font-size:28px;
}

#nav_video_collapse_close_button span:hover:before {
  color:gray;
}

#nav_community_collapse_close_button {
  text-decoration: none;
}

#nav_community_collapse_close_button span{
  font-size:28px;
}

#nav_community_collapse_close_button span:hover:before {
  color:gray;
}

.nav-mypage:hover .icon-mypage:before {
  color:gray;
}

.nav-logout:hover .icon-login:before {
  color:gray;
}

.nav-user-reg:hover .icon-mypage:before {
  color:gray;
}

.nav-login:hover .icon-login:before {
  color:gray;
}

.nav_video_collapse_frame_2 {
  padding-left:0px;
}

.nav_video_collapse_frame_1 {
  padding-left:0px;
}

