html, body {
  height: 100%;
  width: 100%;
  margin: 0;
}
body {
  /*background: #F1F1F1;*/
  background: white;
  font-family: "Hiragino Maru Gothic W4 JIS2004", "游ゴシック", YuGothic, "ヒラギノ角ゴ ProN W3", "Hiragino Kaku Gothic ProN", "メイリオ", Meiryo, "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: 500;
  padding-top: 65px
}
@media screen and (min-width:768px) {
  body {
    padding-top: 90px
  }
}
#site_logo {
  padding-top: 0;
  margin-top: 0;
}
#site_logo_s {
  padding-top: 4px;
  margin: 8px 0 0 5px;
}
.navbar {
  min-height: 50px;
  border-radius: 0;
}

#accordion {
  margin: 0;
  padding: 0;
}
.panel-default {
  border: none;
}

#nav_video_collapse_area,
#nav_community_collapse_area {
  background: #222222;
  color: white;
  padding: 15px;
}
#nav_video_collapse_area a,
#nav_community_collapse_area a {
  color: white;
}
.nav a {
  cursor: pointer;
}
.nav_video_collapse_frame_2 {
  display: block;
}
.nav_video_collapse_frame_3,
.nav_community_collapse_frame_1 {
  display: table;
}
.nav_video_collapse_frame_3_1,
.nav_video_collapse_frame_3_2, {
  display: table-cell;
  width: 200px;
}
.nav_community_collapse_frame_1_1,
.nav_community_collapse_frame_1_2 {
  display: table-cell;
  width: 200px;
}
.nav_video_collapse_area_tag_area,
.nav_community_collapse_area_tag_area {
  border-bottom: 1px solid white;
  width: 160px;
}
.nav_video_collapse_area_tag,
.nav_community_collapse_area_tag {
  display: inline;
  padding: 2px;
}
.nav_video_collapse_area_child_area,
.nav_community_collapse_area_child_area {
  padding: 7px 0 20px 0;
}
.nav_video_collapse_area_child,
.nav_community_collapse_area_child  {
  display: inline-block;
  width: 170px;
}
.nav_submenu_contents {
  padding-left: 10px;
}

@media screen and (min-width:768px) {
  .nav > li a {
    margin-top: 15px;
  }
  .nav > li:not(:last-child) a {
    border-right: 1px solid white;
  }
  #site_logo {
    padding-top: 4px;
    margin-top: 10px;
  }
  #site_logo_s {
    padding-top: 4px;
    margin: 19px 0 0 5px;
  }
  .navbar {
    min-height: 75px;
  }
}

#contants {
}


#footer {
  margin-top: 30px;
  width: 100%;
  height: 200px;
  background: #000;
  position: relative;
}
#top_footer_left_area {
  height: 100px;
  float: left;
  padding-right: 50px;
}
#top_footer_center_area {
  height: 100px;
  float: left;
  padding: 0 15px;
}
#top_footer_right_area {
  height: 100px;
  float: left;
  padding-left: 50px;
}
#top_footer_contents {
  padding-top: 15px;
  overflow: hidden;
  min-width: 300px;
  display: inline-block;
  text-align: left;
}
@media screen and (max-width: 768px) {
  #footer {
    height: 380px;
  }
  #top_footer_left_area,
  #top_footer_center_area,
  #top_footer_right_area {
    height: 100%;
    float: none;
    display: block;
    border: none;
    padding: 15px;
  }
}

#top_footer_search_link_area a,
#footer a, {
  padding: 0;
  margin: 0;
  color: #FFF;
}

#top_footer_left_area .top_footer_title {
  font-size:14px;
  padding: 0;
  margin: 0;
  color: #FFF;
}

#top_footer_search_link_area a {
  font-size:12px;
  padding-left:5px;
}

#footer_text {
  display: block;
  text-align: center;
  color:#FFF;
}
.sm_footer,
.xs_footer {
  text-align: center;
  padding-top: 20px !important;
}
