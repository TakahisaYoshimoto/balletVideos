@import "bootstrap-sprockets";
@import "bootstrap";

$xsmall:  "only screen and (max-width:767px)";
$small: "only screen and (min-width:768px) and (max-width:991px)";
$middle: "only screen and (min-width:992px) and (max-width:1199px)";
$large:  "only screen and (min-width:1200px)";

.btn-primary {
/*  color: #fff;
  background-color: #337ab7;
  border-color: #2e6da4;*/
  color: #fff;
  background-color: #51A7F9;
  border-color: #51A7F9;
}
.btn-primary:focus,
.btn-primary.focus {
  color: #fff;
  background-color: #0E83F3;
  border-color: #0E83F3;
}
.btn-primary:hover {
  color: #fff;
  background-color: #0E83F3;
  border-color: #0E83F3;
}

.navbar-inverse {
  background:#000;
}

html, body {
  height: 100%;
  width: 100%;
  margin: 0;
}

h1 {
  font-size:30px;
}

@media screen and (max-width:767px) {
  h1 {
    font-size:20px;
  }
}

body {
  /*background: #F1F1F1;*/
  background: white;
  font-family: "Hiragino Maru Gothic W4 JIS2004", "游ゴシック", YuGothic, "ヒラギノ角ゴ ProN W3", "Hiragino Kaku Gothic ProN", "メイリオ", Meiryo, "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: 500;
  padding-top: 65px
}
@media screen and (min-width:768px) {
  body {
    padding-top: 90px
  }
}
#site_logo {
  padding-top: 0;
  margin-top: 0;
}
#site_logo_s {
  padding-top: 4px;
  margin: 8px 0 0 5px;
}
.navbar {
  min-height: 50px;
  border-radius: 0;
}

.navbar-nav li a {
  color:#FFF !Important;
  text-align:center;
  display:inline-block;
  padding-left:20px;
  padding-right:10px;
}

.navbar-right li a {
  color:#FFF !Important;
  text-align:center;
  display:inline-block;
  padding-left:0;
}

.navbar-nav li a:hover {
  color:#9d9d9d !Important;
}

.navbar-nav li .dropdown-menu {
  background:#000;
}

#accordion {
  margin: 0;
  padding: 0;
}
.panel-default {
  border: none;
}

#nav_video_collapse_area {
  background: #000;
  color: white;
  padding: 15px;
}
#nav_video_collapse_area .panel-body,
#nav_community_collapse_area .panel-body {
  position: relative;
}
#nav_video_collapse_close_button,
#nav_community_collapse_close_button {
  position: absolute;
  bottom: 10px;
  right: 10px;
}
#nav_community_collapse_area {
  background: #000;
  color: white;
  padding: 15px;
}

#nav_video_collapse_area a,
#nav_community_collapse_area a {
  color: white;
}
.nav a {
  cursor: pointer;
}
.nav_video_collapse_frame_2 {
  display: block;
}
.nav_video_collapse_frame_3,
.nav_community_collapse_frame_1 {
  display: table;
}
.nav_video_collapse_frame_3_1,
.nav_video_collapse_frame_3_2, {
  display: table-cell;
  width: 200px;
}
.nav_community_collapse_frame_1_1,
.nav_community_collapse_frame_1_2 {
  display: table-cell;
  width: 200px;
}
.nav_video_collapse_area_tag_area,
.nav_community_collapse_area_tag_area {
  border-bottom: 1px solid white;
  width: 160px;
}
.nav_video_collapse_area_tag,
.nav_community_collapse_area_tag {
  display: inline;
  padding: 2px;
}
.nav_video_collapse_area_child_area,
.nav_community_collapse_area_child_area {
  padding: 7px 0 20px 0;
}
.nav_video_collapse_area_child,
.nav_community_collapse_area_child  {
  display: inline-block;
  width: 235px;
}
.nav_submenu_contents {
  padding-left: 10px;
}

@media screen and (min-width:768px) {
  .nav > li a {
    margin-top: 2px;
  }
  .nav > li:nth-last-child(n+1):nth-last-child(-n+2) a {
    margin-top: 14px;
  }

  #site_logo {
    padding-top: 4px;
    margin-top: 10px;
    margin-right: 20px;

  }
  #site_logo_s {
    padding-top: 4px;
    margin: 19px 0 0 5px;
  }
  .navbar {
    min-height: 75px;
  }
}

#footer {
  margin-top: 30px;
  width: 100%;
  height: 200px;
  background: #000;
  position: relative;
}

#top_footer_left_area {
  height: 100px;
  float: left;
  padding-right: 20px;
}

#top_footer_second_area,
#top_footer_third_area,
#top_footer_right_area {
  height: 100px;
  float: left;
  padding: 0 10px;
}

#top_footer_center_area {
  height: 100px;
  float: left;
  padding: 20px 10px;
}

#top_footer_sns_area {
  height: 100px;
  float: left;
  padding-left: 20px;
}

#top_footer_contents {
  padding-top: 15px;
  overflow: hidden;
  min-width: 300px;
  display: inline-block;
  text-align: left;
}

@media screen and (max-width: 767px) {
  #footer {
    height: 630px;
  }
  #top_footer_left_area,
  #top_footer_second_area,
  #top_footer_third_area,
  #top_footer_center_area,
  #top_footer_right_area,
  #top_footer_sns_area
   {
    height: 100%;
    float: none;
    display: block;
    border: none;
    padding: 10px;
  }
}

#top_footer_search_link_area a,
#footer a, {
  padding: 0;
  margin: 0;
  color: #FFF;
}

#top_footer_left_area .top_footer_title {
  font-size:14px;
  padding: 0;
  margin: 0;
  color: #FFF;
}

#top_footer_search_link_area a, #top_footer_center_area a {
  font-size:12px;
  padding-left:8px;
}
  @media screen and (max-width: 767px) {
    #top_footer_search_link_area a, #top_footer_center_area a {
      font-size:12px;
      padding-left:15px;
    }
  }

@media screen and (max-width: 767px) {
  #top_footer_search_link_area {
    margin-top:7px;
  }
}

#footer_text {
  display: block;
  text-align: center;
  color:#FFF;
  margin-top:20px;
}

.sm_footer,
.xs_footer {
  font-size:11px;
  text-align: center;
  margin-top: 40px !important;
}
