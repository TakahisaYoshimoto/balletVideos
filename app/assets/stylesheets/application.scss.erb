@import "bootstrap-sprockets";
@import "bootstrap";

$xsmall:  "only screen and (max-width:768px)";
$small: "only screen and (min-width:768px) and (max-width:992px)";
$middle: "only screen and (min-width:992px) and (max-width:1200px)";
$large:  "only screen and (min-width:1200px)";

.btn-primary {
